/* pages/outPunch/outPunch.wxss */
page,.container{
  width: 100%;
  height: 100%;
  background-color: #eee;
}
.punchDeta{
  padding: 20rpx 10rpx;
  font-size: 35rpx;
  background: #fff;
}
.punchDeta .icon-clock2{
  display: inline-block;
  font-size: 18px;
  color: #FF5722;
}
.punchDeta .icon-location1{
   display: inline-block;
  font-size: 18px;
  color: #1E9FFF;
}
textarea{
  width: 100%;
  height: 420rpx;
  padding:10rpx;
  border-top: 1px solid #cfcfcf;
  border-bottom: 1px solid #cfcfcf; 
  background: #fff;
}
.container .imgWrapper{
  padding: 20rpx;
  margin-top: 15rpx;
  width: 100%;
  height: calc( 100vh -  640rpx);
  background-color: #fff;
}
.container .submit{
  width: 100%;
  text-align: center;
  padding: 25rpx;
  font-size: 35rpx;
  background-color: rgb(89, 181, 252);
  position: fixed;
  bottom: 0;
  z-index: 99;
  color: #fff;
  box-sizing: border-box;
}
.imgWrapper .icon{
  font-size: 65rpx;
  color: #bbb;
  display: inline-block;
}
.imgWrapper .iconBox{
  width:105rpx;
  height: 105rpx;
  text-align: center; 
  border: 1px dashed #999;
  border-radius: 15rpx;
} 