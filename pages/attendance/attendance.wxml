<!--pages/attendance/attendance.wxml-->
<view class="container">
<view class="gradient">
  <view class="box">
    <view class="yearmonth">
      <view class="preMonth">
        <view class="item-content" bindtap="doDay" data-key='left'>
          <view class="icon iconfont icon-previous"></view>
        </view>
      </view>
      <view class="currMonth">
        <view class="item-content" id="currymd">{{currentDate}}</view>
      </view>
      <view class="nextMonth">
        <view class="item-content" bindtap="doDay" data-key="right">
          <view class="icon iconfont icon-next"></view>
        </view>
      </view>
    </view>

    <view class="spaceAroundCenter week">
      <view>一</view>
      <view>二</view>
      <view>三</view>
      <view>四</view>
      <view>五</view>
      <view>六</view>
      <view>日</view>
    </view>

    <view class="spaceAroundCenter">
      <view class="flex-item" wx:for="{{currentDayList}}" wx:for-index='key' wx:for-item="vo" wx:key="{{key}}">
        <view id='{{key}}' class="item-content bk-color-day" wx:if="{{vo == currentDay}}"><view class="day">{{vo}}</view></view>
        <view id='{{key}}' class="item-content bk-color-dayClick" wx:elif="{{key == currentClickKey && currentClickKey != '' && vo != ''}}"><view class="day">{{vo}}</view></view>
        <view id='{{key}}' class="item-content" bindtap='onClickItem' wx:else><view class="day">{{vo}}</view></view>
      </view>
    </view>
  </view>
</view>
<view class="hr hr1"></view>
<view class="detalBar">
   <view class="barLeft">
    <view class="ontime">{{ontime}}</view>
    <view class="timebar"></view>
    <view class="offtime">{{offtime}}</view>
   </view>
   <view class="barRight">
     <view class="top" hover-class="click" catchtap="topunch">
       <view class="onwork" >上班</view>
      <view class="status">正常打卡(18:00)</view>
     </view>
<view class="bottom"  hover-class="click" catchtap="topunch">
     <view class="offwork" >下班</view>
      <view class="status">正常打卡(18:00)</view>
</view>
   </view>
</view>
