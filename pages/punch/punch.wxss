/* pages/punch/punch.wxss */
page {
  height:100%;
  width: 100%;
}
.container {
  height: 100%;
  background-color: #fcfbfb;
}
page, .page, .page__bd {
  height: 100%;
}
.page__bd {
  padding-bottom: 0;
}
.weui-navbar {
  position: fixed;
  background-color: #fff;
}
.weui-navbar__slider{
  width: 30%;
  transition: left .3s ease;
}
.weui-navbar__item.weui-bar__item_on{
  color: #62c9f8;
}
.weui-navbar__slider {
  background-color: #62c9f8;
}
.swiperTab .inner{
  width: 100%;
  height: auto;
}
.inner .userInfo{
  width: 100%;
  height: 270rpx;
}
.userInfo .imgWrapper{
  width: 100%;
  height: 150rpx;
  text-align: center;
  box-sizing: border-box;
  padding-top: 10rpx;
}
.userInfo .imgWrapper image{
  width: 125rpx;
  height: 125rpx;
  border-radius: 50%;
  border: 2px solid #eee;
}
.userInfo .userName{
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: rgb(204, 45, 17);
}
.userInfo .signature{
  width: 100%;
  text-align: center;
  font-size: 26rpx;
  color: gray;
  padding: 8rpx 0;
}
.punch{
  width: 100%;
  padding-left: 120rpx;
}
.punch .punchInner .dot{
  width: 8%;
  display: inline-block;
  text-align: center;
}
.punch .punchInner .time{
  display: inline-block;
}
.punch .punchInner .onworkTime .icon{
   display: inline-block;
}
.punchInner .detalWrapper .bar{
  width: 8%;
  height:100%;
  text-align: center;
  display:inline-block;
  vertical-align: top;
}
.punchInner .detalWrapper .bar .timebar{
 width: 8rpx;
 height: 100%;
 background-color: #eee;
 display: inline-block;
 

}
.punchInner .detalWrapper .detail{
  display: inline-block;
}