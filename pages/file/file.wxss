/* pages/file/file.wxss */
page {
  height: 100%;
  width: 100%;
}

.container {
  height: 100%;
  background-color: #fcfbfb;
}

page, .page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.weui-navbar {
  position: fixed;
  background-color: #fff;
}

.weui-tab__panel {
  height: calc(100% - 51px);
  margin-top: 51px;
  padding-top: 0px;
}

.weui-tab__content {
  text-align: center;
}
.weui-navbar__item.weui-bar__item_on{
  color: #62c9f8;
}
.weui-navbar__slider {
  background-color: #62c9f8;
}
.weui-cell.weui-cell_access .item_top{
   text-align: left;
}
.weui-cell.weui-cell_access .item_bottom{
   text-align: left;
   font-size:26rpx; 
   color: gray;
 }

 .weui-cell.weui-cell_access .item_bottom .file_size{
  margin-left: 15px;
 }
 .imgWrpper{
   position: absolute;
   top: 0;
   right: 0;
   bottom: 0;
   left: 0;
   background-color: rgb(255, 255, 255);
   z-index: 9999;
 }
 .imgWrpper .img_box{
     position: absolute;
     top: 50%;
     left: 50%;
     transform: translate(-50%,-50%);
 }
 .toolBar{
   position: fixed;
   bottom: 0;
   width: 100%;
   height: 55px;
   padding: 10px 0;
 }
 .toolBar .tool_title{
   font-size: 26rpx;
 }
 .toolBar .tool_icon{
   font-weight: 600;
 }
 .toolBar .tool{
   display: inline-block;
   width: 25%;
   text-align: center;
 }
 .tool_icon .iconfont {
   font-size: 18px
 }