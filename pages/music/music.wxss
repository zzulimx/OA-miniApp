/* pages/music/music.wxss */
.continer{
  position: absolute;
  top: 0;
  right: 0;
  bottom:0;
  left: 0;
}
.playTool{
  position: fixed;
  bottom: 0;
  width: 100%;
  height:120px;
  background: transparent;
}
.playTool .play_group{
   width: 100%;
   height: 100px;
}
.playTool .play_bar{
  width: 100%;
  
}
.playTool .play_group .play_btn{
  display: inline-block;
  text-align: center;
}
.playTool .play_group .play_btn.prev, .playTool .play_group .play_btn.next{
  width: 35%;
  line-height: 100px;
}
.playTool .play_group .play_btn.prev .icon, .playTool .play_group .play_btn.next .icon{
  font-size: 45px;
  color: gray;
}
.playTool .play_group .play_btn.play_pause{
  width: 30%;
  line-height: 100px;
}
.playTool .play_group .play_btn.play_pause .icon{
  font-size: 60px;
}