/* pages/memo/memo.wxss */
page{
 height:100%;
 width: 100%;
}
.container {
  width: 100%;
  height: 100%;
  background-color: #fcfbfb;
}

.page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.weui-navbar {
  position: absolute;
  background-color: #fff;
}
.weui-navbar__slider{
  width: 30%;
  transition: left .3s;
}
  .weui-tab__panel {
  height:100%;
  padding-top: 0px;
}

.weui-tab__content {
  text-align: center;
}
.weui-navbar__item.weui-bar__item_on{
  color: #62c9f8;
}
.weui-navbar__slider {
  background-color: #62c9f8;
}
.btnWrapper{
  position: absolute;
  right: 40px;
  bottom:40px;
  z-index: 999;
}
.btnWrapper .btnIcon{
  width: 60px;
  height: 60px;
  background-color: #62c9f8;
  border-radius: 50%;
  box-shadow:3px 0px 4px #d5f2ff;
}
.btnIcon .icon{
  line-height: 60px;
text-align: center;
font-size: 38px;
color: #fff;
}
.empty{
  margin-top: 20%;
  text-align: center;
  font-size: 32rpx;
  color: gray;
}
.empty image{
  width: 235px;
}
.newGroup ,.groupWrapper,.recycle{
  height: 120rpx;
  width: 100%;
}
.newGroup .itemLeft,.groupWrapper .itemLeft,.recycle .itemLeft{
  width: 15%;
  height: 100%;
  display: inline-block;
}
.newGroup .itemLeft .icon{
  line-height: 120rpx;
font-size: 66rpx;
color: gray;
}
.groupWrapper .itemLeft .icon{
  line-height: 120rpx;
font-size: 66rpx;
color: #ffd058;
}
.recycle .itemLeft .icon{
  line-height: 120rpx;
font-size: 64rpx;
color: #62c9f8;
}
.newGroup .itemRight,.groupWrapper .itemRight,.recycle .itemRight{
  width: 85%;
  height: 100%;
  display: inline-block;
  border-bottom: 1px solid #ddd;
  vertical-align: top;
}
.itemRight .title{
  text-align: left;
  font-size: 36rpx;
  line-height: 120rpx;
  color: #444;
}