}
page{
 height:100%;
 width: 100%;
}
.container {
  width: 100%;
  height: 100%;
  background-color: rgba(245, 245, 245, 0.9);
}

.page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.weui-navbar {
  position: absolute;
  background-color: #fff;
}
.weui-navbar__slider{
  width: 30%;
  transition: left .3s;
}
  .weui-tab__panel {
  height:100%;
  padding-top: 0px;
}

.weui-tab__content {
  text-align: center;
}
.weui-navbar__item.weui-bar__item_on{
  color: #62c9f8;
}
.weui-navbar__slider {
  background-color: #62c9f8;
}
.btnWrapper{
  position: absolute;
  right: 40px;
  bottom:40px;
  z-index: 999;
}
.btnWrapper .btnIcon{
  width: 60px;
  height: 60px;
  background-color: #62c9f8;
  border-radius: 50%;
  box-shadow: 0px 4px 4px -4px #d5f2ff;
}
.btnIcon .icon{
  line-height: 60px;
text-align: center;
font-size: 38px;
color: #fff;
}
.empty{
  margin-top: 20%;
  text-align: center;
  font-size: 32rpx;
  color: gray;
}
.empty image{
  width: 235px;
}
.newGroup ,.groupWrapper,.recycle{
  height: 120rpx;
  width: 100%;
}
.newGroup .itemLeft,.groupWrapper .itemLeft,.recycle .itemLeft{
  width: 15%;
  height: 100%;
  display: inline-block;
}
.newGroup .itemLeft .icon{
  line-height: 120rpx;
font-size: 66rpx;
color: gray;
}
.groupWrapper .itemLeft .icon{
  line-height: 120rpx;
font-size: 66rpx;
/* color: #ffd058; */
}
.recycle .itemLeft .icon{
  line-height: 120rpx;
font-size: 64rpx;
color: #62c9f8;
}
.newGroup .itemRight,.groupWrapper .itemRight,.recycle .itemRight{
  width: 85%;
  height: 100%;
  display: inline-block;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  vertical-align: top;
}
.itemRight .title{
  text-align: left;
  font-size: 36rpx;
  line-height: 120rpx;
  color: #444;
  display: inline-block;
  float: left;
}
.itemRight .icon{
  display: inline-block;
  float: right;
  margin-right: 50rpx;
  line-height: 120rpx;
  color: #444;
}
.layOpen{
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  height: 100%;
  padding-top: 50px;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 9999;
}
.layOpen .layInner{
  position: fixed;
  background-color: #fff;
  width: 85%;
  margin-top: 50%;
  margin-left: 50%;
  transform: translate(-50%,-50%);
}
.layOpen .layInner .file_title{
  text-align: center;
  padding: 10px;
 color: #000;
 font-size: 40rpx;
}
.layOpen .layInner input{
  width: 80%;
  background-color: rgba(0,0,0,0.05);
  border-radius: 5px;
  height: 40px;
  line-height: 40px;
  margin-left: 50%;
  transform: translate(-50%);
  padding-left: 10px;
}
.layOpen .layInner .file_operate{
  padding: 12px;
}
.layOpen .layInner .file_operate text{
  display: inline-block;
  width: 50%;
  text-align: center;
  color: #333;
  font-size: 36rpx;
}
.layOpen .layInner .file_operate .file_create{
  color: #62c9f8;
}
.colorSelect{
  width: 80%;
  height: 120rpx;
  margin-left: 50%;
  transform: translateX(-50%);
}
 .colorTitle{
  font-size: 34rpx;
  color: #333;
vertical-align: top;
  margin-top: 32rpx;
  display: inline-block;
  width: 35%;
}
.colorBox{
  display: inline-block;
  width: 65%;
  height: 100%;
}
.colorBox .boxContent{
  width: 700rpx;
}
.colorBox .color{
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  background-color: #fff;
  border-radius: 50%;
  margin: 45rpx 18rpx;
}
.colorBox .color1{
  border:1px solid #ff0202;
  background-color: #ff0202;
}
.colorBox .color2{
border:1px solid #09b9ff;
}
.colorBox .color3{
border:1px solid #ffb64a;
}
.colorBox .color4{
border:1px solid #a69cff;
}
.colorBox .color5{
border:1px solid #8fee71;
}
.colorBox .color6{
  border:1px solid #ff9898;
}
.colorBox .color7{
border:1px solid #0bddba;
}
.colorBox .color8{
border:1px solid #fff34a;
}
.colorBox .color9{
border:1px solid #eb41eb;
}
.colorBox .color10{
border:1px solid #2f9949;
}
.hr{
  width: 100%;
   border-bottom: 2px solid #eee;
}
.memoWrapper{
  padding: 0 30rpx 60rpx;
  box-sizing: border-box;
}
.memoItem{
  width: 86%;
  display: inline-block;
  margin-top: 15rpx;
  box-shadow: 0px 2px 8px -5px #555;
  padding: 20rpx;
  box-sizing: border-box;
  overflow: hidden;
  border-radius: 15rpx;
}
.memoItem .itemLeft{
  display: inline-block;
  float: left;
  text-align: left;
  width: 80%;
}
.memoItem .itemLeft .leftTop{
  width: 100%;
overflow: hidden;
max-height: 50rpx;
text-overflow:ellipsis;
white-space: nowrap;
}
.memoItem.isTop{
  padding: 14rpx 20rpx;
}
.memoItem.isTop .itemRight{
  margin-right: -5rpx;
}
.memoItem .itemRight{
  height: 100%;
  float: right;
  margin-right: 10rpx;
}
.memoItem .itemRight .icon{
  display: inline-block;
  float: unset;
  margin-right: unset;
  line-height: unset;
  color: #888;
  font-size: 45rpx;
}
.memoItem .itemRight .icon-start1{
  color: rgb(255, 163, 92);
  font-size: 70rpx;
}
.memoItem .itemLeft .leftTop{
  font-size: 32rpx;
  color: #333;
}
.memoItem .itemLeft .leftBottom{
font-size: 30rpx;
color: gray;
}
.selectIcon{
  display: inline-block;
width: 12%;
height: 100%;
line-height: 140rpx;
vertical-align: top;
margin-top: 15rpx;
text-align: right;
}
.selectIcon .icon{
  font-size: 45rpx;
  color: gray;
}
.operateGroup{
  position: fixed;
  width: 100%;
  z-index: 999;
  bottom: 0;
  left: 0;
  background-color: rgba(245, 245, 245, 0.9);
}
.operateGroup .operateTool{
display: inline-block;
margin-left: 50%;
transform: translateX(-50%);
width: 560rpx;
}
.operateGroup .selectAll,.operateGroup .deleteSelect, .operateGroup .cancleOperate{
  display: inline-block;
padding: 0 64rpx;
text-align: center;
}
.selectAll .icon{
  font-size: 40rpx;
color: #000;
}
.operateTool .title{
  font-size: 28rpx;
color: #000;
}
.deleteSelect .icon{
  font-size: 40rpx;
color: #000;
}
.cancleOperate .icon{
  font-size: 38rpx;
color: #000;
}
