/* pages/locate/locate.wxss */
page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
}
.container map{
  position: relative;
}
.container .controls{
  width: 75rpx;
  height:75rpx;
  position: absolute;
  bottom: 60rpx;
  right: 60rpx;
  background-color: #fff;
  border-radius:10rpx;
  overflow: hidden;
}
.controls .locateIcon{
  width:60rpx;
  height: 60rpx;
  margin:50% 50%;
  transform: translate(-50%,-50%); 
}
.range{
  font-size: 28rpx;
  color: gray;
  padding: 10rpx;
}
.currLoca .currTitle{
  font-size: 33rpx;
  font-weight: bold;
}
.currLoca .icon{
  font-size: 45rpx;
  color: #01AAED;
}
.locationList .weui-cell {
  display: block;
}
.locationList .locaItem .weui-cells.click{
  background-color: #eee;
}
.weui-cells:before {
  content:unset;
}
.locationList .locaTitle{
  color:#333;
  font-size: 32rpx;
  font-weight: bold;
}
.locaDetal{
  color: #999;
  font-size: 26rpx;
}
