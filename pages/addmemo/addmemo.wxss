/* pages/addmemo/addmemo.wxss */
@import "../../template/richtext/iconfont.wxss";
page{
  width: 100%;
  height: 100%;
  background: #eee;
}
.container{
  width: 100%;
  height: 100%;
}
.container .head{
  width: 100%;
  background: #fff;
  border-bottom: 1px solid #cdcdcd;
  padding: 0 10rpx;
box-sizing: border-box;
height: 120rpx;
}
.head .icon{
  display: inline-block;
  vertical-align: top;
  line-height: 120rpx;
  color: #464646;
  font-size: 60rpx;
}
.head .icon-zhuomian-{
  width: 70rpx;
}
.line{
  vertical-align: top;
line-height: 115rpx;
color: #ddd;
display: inline;
padding: 0 10rpx;
}
.head .icon-up{
  float: right;
width: 70rpx;
box-shadow: -8px 0px 8px -8px #aaa;
height: 70rpx;
margin: 25rpx 0;
line-height: 70rpx;
font-size: 50rpx;
}
.editorWrapper{
  height: calc( 100% - 120rpx );
}
#editor{
  background: #fff;
  padding: 20rpx;
  height: 100% ;
}

.ql-editor.ql-blank::before{
  color: #888;
  font-size: 30rpx;
  content: attr(data-placeholder);
  pointer-events: none;
  position: absolute;
  font-style:normal;
  letter-spacing: 2rpx;
}
.container .toolWrapper{
  height: 120rpx;
  width: 75%;
  overflow-x: scroll;
  display: inline-block;
}
.toolWrapper .toolbar{
  height: 120rpx;
  display: inline-block;
}

.toolbar .iconfont{
  font-size: 40rpx;
  color: #444;
  margin: 0 20rpx;
  line-height: 120rpx;
}
.toolWrapper .toolbar .ql-active {
  color: #62c9f8;
}
