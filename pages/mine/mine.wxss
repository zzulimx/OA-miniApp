page {
  height: 100%;
  width: 100%;
}

.container {
  height: 100%;
  background-color: #fcfbfb;
  position: relative;
}

.container .mine {
  width: 100%;
  background-color: #62c9f8;
  height: 22%;
  /* float: left; */
}
.container .personalInfo{
  position: absolute;
  width: 90%;
  height: 23%;
  top: 8%;
  left: 50%;
  transform: translateX(-50%);
  background-color: #fff;
  box-shadow: 2px 2px 12px #ddd;
  border-radius: 8px;
}
.container .personalInfo .user_avatar{
  position: relative;
  height: 30%;
  width: 100%;
}
.personalInfo .user_avatar image{
  width: 17vw;
  height: 17vw;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  transform: translate(-50%,-50%);
}
.personalInfo .info_box{
  width: 100%;
  height: 70%;
  box-sizing: border-box;
  text-align: center;
}
.personalInfo .info_box .user_name{
  font-size: 34rpx;
  font-weight:600;
  padding: 5px;
}
.personalInfo .info_box .user_depart{
  font-size: 30rpx;
  color: gray;
}
.personalInfo .info_box .user_num{
  font-size: 26rpx;
  color: #ccc;
  padding: 5px;
}
.container .menu_box{
  padding-top: 16%;
  box-sizing: border-box;
  background-color: #fff;
}

.menu_box .menu1,.menu_box .menu2{
  display: inline-block;
  padding: 10px;
  width: 50%;
  box-sizing: border-box;
  text-align: center;
}
.menu1 image, .menu2 image{
  width: 30px;
  height: 30px;
}
.menu_box .menu_title{
  font-size: 30rpx;
}
.hr{
  width: 100%;
  height: 1%;
  background-color: #eee;
}
.weui-cells:before{
  content: unset;
}
.weui-cells.group1::after{
  content: unset;
}

