/**index.wxss**/
canvas{
  width: 100%;
  height: 110%;
  background: transparent; 
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}
page {
  height: 100%;
  width: 100%;
}
.container {
  position: relative;
  height: 100%;
}

.weui-search-bar__box {
  text-align: center;
}

.weui-icon-search_in-box {
  left: calc(50% - 40px);
}

.my-message {
  width: calc(100% - 20px);
  margin: 0px 10px;
  min-height: 60px;
  border-bottom: 1px solid #1235;
  float: left;
}
.msg-list{
  clear: both;
}
.my-message .message-left {
  width: 40px;
  height: 40px;
  float: left;
  padding: 5px 10px;
}

.my-message .message-left image {
  max-height: 100%;
  max-width: 100%;
  border-radius: 50px;
}

.my-message .message-right {
  width: calc(100% - 90px);
  height: calc(100% - 20px);
  padding: 5px 10px;
  float: left;
}

.my-message .message-right .message-right-top {
  width: 100%;
  height: 50%;
  float: left;
  font-size: 14px;
}

.my-message .message-right .message-right-bottom {
  width: 100%;
  float: left;
}

.my-message .message-right .message-right-bottom .message-item {
  width: auto;
  height: 25px;
  float: left;
  font-size: 12px;
  padding-right: 8px;
  line-height: 25px;
}

.my-message .message-right .message-right-bottom .message-item .item-type-name {
  width: auto;
  height: 100%;
}

.my-message .message-right .message-right-bottom .message-item .item-type-num {
  width: auto;
  height: 100%;
  color: rgba(247, 10, 10, 0.733);
}

@import '../../template/msglist/msglist.wxss'

