/* pages/addlog/addlog.wxss */
page{
  width: 100%;
  height: 100%;
}
.container{
  min-height: 100%;
  width: 100%;
  background-color: rgba(0,0,0,0.03);
  padding-bottom: 150rpx;
}
.prompt{
  width: 100%;
  padding: 15rpx;
  text-align: right;
  box-sizing: border-box;
  font-size: 28rpx;
  color: gray;
}
.btnWrapper{
  width: 100%;
  height: 140rpx;
  border-top:1px solid #ddd;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  padding: 0 25rpx;
  box-sizing: border-box;
}
.btnWrapper .submit-btn{
  width: 100%;
  background-color: #1E9FFF;
  color: #fff;
  top: 50%;
  transform: translateY(-50%);
}
@import '../../template/daylog/daylog.wxss';
@import '../../template/weeklog/weeklog.wxss';
@import '../../template/monthlog/monthlog.wxss';