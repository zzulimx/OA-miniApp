/* pages/chat/chat.wxss */
page{
  background-color: rgb(238, 238, 238);
}
/* 输入框 */
.chatInpWrapper{
  width: 100%;
  position: fixed;
  top: auto;
  bottom: 0;
  height: 45px;
  padding: 5px;
  background-color: rgb(243, 243, 243);
  z-index: 99;
}
.button-sp-area{
  padding-left: 10px;
  padding-top: 5px;
}
.weui-search-bar__box {
   padding: 0; 
}
.weui-search-bar__input{
  padding-left: 5px;
  background-color: #fff;
  /* width: 50%; */
  /* width: 65%; */
  display: inline-block;
  height: 35px;
  border-radius:5px;
  transition: width .3s ease;
  /* 光标颜色真机无效果 */
  caret-color: #62c9f8;
}

.icon_part{
  display: inline-block;
  /* width: 28%; */
  /* width: 20%; */
  padding-left:10px;
  height: 35px;
  position: relative;
  top: -3px;
  transition: width .3s ease;
}
.icon_part .icon-Smile,.icon_part .icon-add1{
  font-size: 25px;
  line-height: 30px;
  position: absolute;
  top: 6px;
}
.icon_part .icon-add1{
  top: 0px;
  left: 0px;
  z-index: 0;
}
.add_send{
  position: absolute;
  left: 40px;
  top: 6px;
}
.voiceBtn{
  display: inline-block;
}
.voiceBtn .iconfont{
  font-size: 25px;
  width: 10%;
  height: 35px;
  position: relative;
  top: -6px;
  padding: 5px
}
.clickVoice{
  display: inline-block;
  width: 64%;
  padding-left: 5px;
  height: 35px;
  border-radius: 5px;
  /* background-color: #fff; */
  text-align: center;
  line-height: 35px;
  font-size: 14px;
  position: relative;
  top: -12px;
}
