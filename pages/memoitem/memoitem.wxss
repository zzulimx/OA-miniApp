/* pages/memoitem/memoitem.wxss */
page{
 height:100%;
 width: 100%;
}
.container {
  width: 100%;
  overflow: hidden;
  background-color:#f6f6f6;
  min-height: 100%;
}
.btnWrapper{
  position: absolute;
  right: 40px;
  bottom:40px;
  z-index: 999;
}
.btnWrapper .btnIcon{
  width: 60px;
  height: 60px;
  background-color: #62c9f8;
  border-radius: 50%;
  box-shadow: 0px 4px 4px -4px #d5f2ff;
}
.btnIcon .icon{
  line-height: 60px;
text-align: center;
font-size: 38px;
color: #fff;
}
.empty{
  margin-top: 20%;
  text-align: center;
  font-size: 32rpx;
  color: gray;
}
.empty image{
  width: 235px;
}
.memoWrapper{
  padding: 30rpx 30rpx 160rpx;
  box-sizing: border-box;
}
.memoItem{
  width: 86%;
  display: inline-block;
  margin-top: 15rpx;
  box-shadow: 0px 2px 8px -5px #555;
  padding: 20rpx;
  box-sizing: border-box;
  overflow: hidden;
  border-radius: 15rpx;
}
.memoItem .itemLeft{
  display: inline-block;
  float: left;
  text-align: left;
  width: 80%;
}
.memoItem .itemLeft .leftTop{
  width: 100%;
overflow: hidden;
max-height: 50rpx;
text-overflow:ellipsis;
white-space: nowrap;
}
.memoItem.isTop{
  padding: 14rpx 20rpx;
}
.memoItem.isTop .itemRight{
  margin-right: -5rpx;
}
.memoItem .itemRight{
  height: 100%;
  float: right;
  margin-right: 10rpx;
}
.memoItem .itemRight .icon{
  display: inline-block;
  float: unset;
  margin-right: unset;
  line-height: unset;
  color: #888;
  font-size: 45rpx;
}
.memoItem .itemRight .icon-start1{
  color: rgb(255, 163, 92);
  font-size: 70rpx;
}
.memoItem .itemLeft .leftTop{
  font-size: 32rpx;
  color: #333;
}
.memoItem .itemLeft .leftBottom{
font-size: 30rpx;
color: gray;
}
.selectIcon{
  display: inline-block;
width: 12%;
height: 100%;
line-height: 140rpx;
vertical-align: top;
margin-top: 15rpx;
text-align: right;
}
.selectIcon .icon{
  font-size: 45rpx;
  color: gray;
}
.selectIcon .icon-xuanzhong3{
  color: #62c9f8;
}
.operateGroup{
  position: fixed;
  width: 100%;
  z-index: 999;
  bottom: 0;
  left: 0;
  background-color: #f6f6f6;
}
.operateGroup .operateTool{
display: inline-block;
margin-left: 50%;
transform: translateX(-50%);
width: 560rpx;
}
.operateGroup .selectAll,.operateGroup .deleteSelect, .operateGroup .cancleOperate{
  display: inline-block;
padding: 0 64rpx;
text-align: center;
}
.selectAll .icon{
  font-size: 40rpx;
color: #000;
}
.operateTool .title{
  font-size: 28rpx;
color: #000;
}
.deleteSelect .icon{
  font-size: 40rpx;
color: #000;
}
.cancleOperate .icon{
  font-size: 38rpx;
color: #000;
}
.groupContent{
  padding-bottom: 200rpx;
}
