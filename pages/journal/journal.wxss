.selectByDate{
  width: 235rpx;
text-align: center;
height: 64rpx;
line-height: 64rpx;
margin-left: 50%;
transform: translateX(-50%);
font-size: 36rpx;
font-weight: bold;
background-color: rgba(0,0,0,0.08);
border-radius: 60rpx;
}
.selectByDate .icon{
  font-size: 32rpx;
  color: #aaa;
  display: inline;
}
.selectByDate::before{
   content: '';
   position:absolute;
   width:200rpx;
   border-bottom: 1px solid rgba(0, 0, 0, 0.15); 
   left: -260rpx; 
   top: 40rpx;
}
.selectByDate::after{
   content: '';
   position:absolute;
   width:200rpx;
   border-bottom: 1px solid rgba(0, 0, 0, 0.15); 
   right: -260rpx; 
   top: 40rpx;
}