page, .page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.weui-navbar {
  position: fixed;
  background-color: #fff;
}

.weui-tab__panel {
  height: calc(100% - 51px);
  margin-top: 51px;
  padding-top: 0px;
}

.weui-tab__content {
  text-align: center;
}

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.singleTrade {
  width: calc(100% - 20rpx);
  margin: 10rpx;
  border: 1px solid #CDC9C9;
  border-radius: 10px;
  height: 80px;
  background-color: #fff;
}

.singleTrade .title {
  width: 100%;
  float: left;
}

.singleTrade .title .name {
  width: calc(70% - 20px);
  text-align: left;
  margin-left: 20rpx;
  float: left;
}

.singleTrade .title .state {
  width: calc(30% - 20px);
  text-align: right;
  margin-right: 20rpx;
  float: right;
  font-size:21rpx;
  line-height:45rpx;
}

.singleTrade .title .unread{
  color: red;
}

.singleTrade .title .read{
  color: greenyellow;
}

.singleTrade .content{
  float: left;
  height:25px;
  width:calc(100% - 60rpx);
  margin:0 30rpx;
  text-align:left;
  color: #a0a0a0;
}

.singleTrade .other-mation {
  width: 100%;
  float: left;
}

.singleTrade .other-mation .send-name {
  width: calc(50% - 20px);
  text-align: left;
  margin-left: 20rpx;
  float: left;
  font-size:21rpx;
  line-height:55rpx;
  color: #000;
}

.singleTrade .other-mation .date {
  width: calc(50% - 20px);
  text-align: right;
  margin-right: 20rpx;
  float: right;
  font-size:21rpx;
  line-height:55rpx;
  color: #000;
}
