<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
    
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>

      <swiper class="weui-tab__panel" duration="300" bindchange="swiperTab" current="{{activeIndex}}">
        <swiper-item hidden="{{activeIndex != 0}}">
          <view class="weui-tab__content">
            <block wx:for="{{seeWorkLogList}}" wx:for-index="idx" wx:for-item="bean">
              <view class="singleTrade" catchtap="showSeeWorkLogDetail" data-id="{{bean.id}}">
                <view class="title">
                  <view class="name">{{bean.title}}</view>
                  <view class="state read">已读</view>
                </view>
                <view class="content">
                  {{bean.content}}
                </view>
                <view class="other-mation">
                  <view class="send-name">￥{{bean.sendId}}</view>
                  <view class="date">￥{{bean.sendId}}</view>
                </view>
              </view>
            </block>
          </view>
        </swiper-item>
        <swiper-item hidden="{{activeIndex != 1}}">
          <view class="weui-tab__content">选项二的内容</view>
        </swiper-item>
        <swiper-item hidden="{{activeIndex != 2}}">
          <view class="weui-tab__content">选项三的内容</view>
        </swiper-item>
      </swiper>
    </view>
  </view>
</view>