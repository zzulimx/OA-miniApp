/* pages/textitem/textitem.wxss */
page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
  background-color: #fff;
}
.container .wrapper{
  width: 100%;
  height: 100%;
  padding: 5px;
  box-sizing: border-box;
}
.wrapper editor.ql-container{
  width: 100%;
  min-height: 100%;
}
.operateTool{
  position: fixed;
  bottom: 0;
  z-index: 999;
  width: 100%;
  height: 55px;
  background: #fff;
  border-top: 1px solid #ddd;
}
.operateTool .operateIcon{
  width: 100%;
  height: 55px;
}
.operateTool .operateIcon .operate{
  display: inline-block;
  width: 25%;
  text-align: center;
  padding: 10px 0;
}
.operateTool .operateIcon .operate .icon{
  font-size: 22px;
  color: gray;
}
.h2w-light {
   padding-bottom:65px;
}
.click{
  background-color: #eee;
}