page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  box-sizing: border-box;
  padding: 0 15rpx;
  height: auto;
}
.container .senderInfo{
  height:120rpx;
  border-bottom: 1px solid #ddd;
  padding: 10rpx 0;
}
.senderInfo .infoLeft{
  height: 100%;
display: inline-block;
padding: 25rpx 30rpx 25rpx 20rpx;
box-sizing: border-box;
vertical-align: top;
}
.infoLeft image{
  width: 70rpx;
height: 70rpx;
border-radius: 50%;
display: inline-block;
vertical-align: middle;
}
.infoRight{
  display: inline-block;
}
.infoRight{
  box-sizing: border-box;
padding-top: 15rpx;
}
.infoRight .sender{
  font-size: 32rpx;
}
.infoRight .sendTime{
  font-size: 28rpx;
  color: gray;
  padding-top: 5rpx;
}
.contentWrapper{
  padding: 10rpx 0;
}
.contentWrapper .title{
  font-size: 35rpx;
  /* font-weight: bold; */
  color: #000;
  padding: 10rpx 5rpx;
}
.contentWrapper .content{
  font-size: 32rpx;
  color: #444;
  padding: 20rpx;
}
